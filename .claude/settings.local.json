{
  "permissions": {
    "allow": [
      "Bash(git commit:*)",
      "Bash(git log:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git add:*)",
      "Bash(git worktree:*)",
      "Bash(git branch:*)",
      "Bash(rake monitor:*)",
      "Bash(rake check_env:*)"
    ],
    "deny": [
      "Bash(git push:*)",
      "Bash(git remote remove:*)",
      "Bash(git reflog expire:*)",
      "Bash(git filter-branch:*)",
      "Bash(git reset --hard:*)",
      "Bash(git clean -fdx:*)",
      "Bash(git clean -fxd:*)",
      "Bash(git branch -D:*)",
      "Bash(git tag -d:*)",
      "Bash(rake init:*)",
      "Bash(rake update:*)",
      "Bash(rake buildall:*)",
      "Bash(idf.py erase_flash:*)",
      "Bash(idf.py erase_otadata:*)",
      "Bash(rm -rf:*)",
      "Bash(rm -fr:*)",
      "Bash(dd:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(ssh:*)",
      "Read(.env)",
      "Read(.env.*)",
      "Read(secrets/**)",
      "Write(secrets/**)",
      "Read(**/*.key)",
      "Read(**/*.pem)"
    ],
    "ask": [
      "Bash(git revert:*)",
      "Bash(git reset:*)",
      "Bash(git merge:*)",
      "Bash(git rebase:*)",
      "Bash(git cherry-pick:*)",
      "Bash(git stash drop:*)",
      "Bash(git stash clear:*)",
      "Bash(git clean:*)",
      "Bash(git gc:*)",
      "Bash(git branch -m:*)",
      "Bash(git branch -d:*)",
      "Bash(git tag:*)",
      "Bash(git submodule deinit:*)",
      "Bash(git submodule update --remote:*)",
      "Bash(rake build:*)",
      "Bash(rake cleanbuild:*)",
      "Bash(rake flash:*)",
      "Bash(idf.py fullclean:*)",
      "Bash(rm -r:*)"
    ]
  }
}
